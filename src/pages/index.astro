---
import Layout from "@layouts/Layout.astro";
---

<Layout title="Rick and Morty - Home">
	<main
		class="min-h-screen flex justify-center items-center relative overflow-hidden"
	>
		<div class="fixed inset-0 bg-gradient-to-b from-blue-900 to-black">
			<div
				class="absolute inset-0 bg-[radial-gradient(white_1px,transparent_1px)] bg-[length:50px_50px] animate-twinkle"
			>
			</div>
		</div>
		<div class="text-center z-10 animate-space-float">
			<img
				src="https://media.cdn.adultswim.com/uploads/20210428/21428161947-rick-and-morty-logo-png.png"
				alt="Rick and Morty"
				class="max-w-[600px] w-[90%] mx-auto mb-8"
			/>
			<a
				href="/Characters"
				class="inline-block px-8 py-4 bg-cyan-500 text-white rounded-lg text-xl transition-all hover:scale-105 hover:bg-cyan-400"
			>
				View Characters
			</a>
		</div>
	</main>
</Layout>

